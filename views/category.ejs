<html lang="en">
<head>
   <meta charset="UTF-8">
   <title>Random Title</title>

   <!-- CSS link (loading Semantic UI from a CDN) -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

   <style>
     body { padding:50px; }
     .table-card {
    border: 1px solid #d8d8d852;
    box-shadow: 0 10px 10px -5px #e5e5e5;
    border-radius: 0 0 5px 5px;
    }
   </style>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
</head>
<body>
<main class="main-content mt-1 border-radius-lg" ng-controller="CategoryController" ng-init="loadData()" dir="rtl" lang="ar">
    <div class="loadingProgresspage ng-hide" ng-show="isloading"></div>
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="py-1 px-3">
            <nav aria-label="breadcrumb" class="pb-3">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 ">
                    <li class="breadcrumb-item text-sm active">Category</li>

                </ol>
                <h6 class="font-weight-bolder mb-0">Category Details</h6>
            </nav>
            <div class="collapse navbar-collapse" id="navbar">
                <div class="ms-md-auto d-flex align-items-center">
                    <div class="input-group">
                        <div class="btn-box ms-1">
                            <button class="button btn btn-dark right" placeholder="Search Text" value="Add" onclick="addCategory(0)"> Add</button>
                        </div>
                        <div class="btn-box ms-1">
                            <button class="button btn btn-dark" placeholder="Search Text" value="Add" onclick="redirectOnHomeage()">Home</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="table-card mb-4">
                    <!-- <div class="card-body px-0 pt-0 pb-2"> -->
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-light font-weight-bolder opacity-7 text-center bg-dark">Category Name</th>
                                        <th class="text-center text-light font-weight-bolder opacity-7 bg-dark">Date</th>
                                        <th class="text-light opacity-7 text-center bg-dark">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(categoryDetails.length) { for(var i = 0; i< categoryDetails.length; i++) { %>
                                    <tr>
                                        <td>
                                            <p class="mb-0 text-center"> <%= categoryDetails[i].CategoryName%></p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-secondary"><%= categoryDetails[i].CreatedDate%></p>
                                        </td>
                                        <td class="text-center">
                                            <i class="fa fa-pencil cursorpointer" onclick="updateCategory(<%=categoryDetails[i].CategoryId%>)"></i>
                                            <i class="fa fa-trash cursorpointer" onclick="deleteCategory(<%=categoryDetails[i].CategoryId%>)"></i>
                                        </td>
                                    </tr>
                                    <% } }else{ %>
                                        <tr>
                                            <td>No data ever existed.</td>
                                          </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    <!-- </div> -->
                </div>
            </div>
        </div>
    </div>
</main>
<main class="main-content mt-1 border-radius-lg ng-scope" ng-controller="ProductController" ng-init="loadData()" dir="rtl" lang="ar">
    <!-- Navbar -->
    <!-- End Navbar -->

</main>
</body>
<script>
    
    function updateCategory(categoryId)
    {
      return window.location.href = 'category/updateCategory/'+ categoryId;
    }
    function deleteCategory(categoryId)
    {
      return window.location.href = 'category/deleteCategoryDetails/'+ categoryId;
    }
    function addCategory(categoryId)
    {
        return window.location.href = 'category/updateCategory/'+categoryId;
    }
    function redirectOnHomeage()
    {
        return window.location.href = 'http://localhost:3000';
    }
    </script>
</html>